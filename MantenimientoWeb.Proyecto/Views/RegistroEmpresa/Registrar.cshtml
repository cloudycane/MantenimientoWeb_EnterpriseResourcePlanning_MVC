@model EmpresaViewModel

@{
    Layout = null;
    ViewBag.Title = "Registro Empresarial"; 
}

<head>

    <title>@ViewBag.Title</title>
    @*Importar stylesheets customizados y de BootStrap, javascripts*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap-theme.min.css" integrity="sha384-6pzBo3FDv/PJ8r2KRkGHifhEocL+1X2rVCTTkUfGk7/0pbek5mMa1upzvWbrUbOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/registroEmpresa.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>
    <h1 class="text-center">Registrar Empresa</h1>
    <hr />

    <div class="container">
        <form asp-action="Registrar" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <div class="col-lg-6">
                    <label asp-for="CIF"></label>
                    <input asp-for="CIF" class="form-control"/>
                    <div class="text-danger float-end">@Html.ValidationMessageFor(model => model.CIF)</div>
                </div>
                <div class="col-lg-6">
                    <label asp-for="RazonSocial"></label>
                    <input asp-for="RazonSocial" class="form-control" />
                    <div class="text-danger float-end">@Html.ValidationMessageFor(model => model.RazonSocial)</div>
                </div>

                <div class="col-lg-6">
                    <label asp-for="CorreoElectronico"></label>
                    <input asp-for="CorreoElectronico" class="form-control" />
                    <div class="text-danger float-end">@Html.ValidationMessageFor(model => model.CorreoElectronico)</div>

                </div>

                <div class="col-lg-6">
                    <label asp-for="PaisId">País</label>
                    <select asp-for="PaisId" class="form-control" asp-items="Model.PaisesSelectList"> <option>--Seleccionar un país--</option> </select>
                    
                </div>

                <div class="col-lg-6">
                    <label asp-for="TipoEmpresaId">Tipo Empresa</label>
                    <select asp-for="TipoEmpresaId" class="form-control" asp-items="Model.TipoEmpresaSelectList"> <option>--Seleccionar el tipo de empresa--</option> </select>

                </div>

                <div class="col-lg-6">
                    <label asp-for="Direccion"></label>
                    <input asp-for="Direccion" class="form-control" />
                    <div class="text-danger float-end">@Html.ValidationMessageFor(model => model.Direccion)</div>
                </div>

                <a asp-action="Index" class="btn btn-info"> Volver al Inicio</a>
                <button type="submit" class="btn btn-primary" id="registrarBoton">Registrar</button>

            </div>

        </form>
    </div>
    
    
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    
   
}