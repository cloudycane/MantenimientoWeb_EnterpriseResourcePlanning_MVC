@model IEnumerable<InventarioModel>

<div class="container" style="margin-top: 6%">
    <h2 class="text-center">Resultado/s de Busqueda en Inventarios</h2>
    
    <partial name="_BusquedaPartial" />

    @if (Model != null && Model.Any())
    {
        foreach (var inventario in Model)
        {
            <div class="container m-b bg-light">

                <div class="card-header">
                    <h3 class="text-decoration-underline"><strong>@inventario.Producto.Nombre</strong></h3>
                </div>
                <div class="card-body">

                    <div class="col-sm-6">
                        <p><strong>Unidades De Compra En Año:</strong> @inventario.UnidadesDeCompraEnAño</p>
                    </div>

                    <div class="col-sm-6">
                        <p><strong>Cantidad Terminada: </strong>@inventario.Cantidad</p>
                    </div>

                    <div class="col-sm-6">
                        <p><strong>Precio Compra: </strong>@inventario.PrecioCompra</p>
                    </div>

                    <div class="col-sm-6">
                        <p><strong>Costo Percentual: </strong>@inventario.CostoPercentual</p>
                    </div>

                    <div class="col-sm-6">
                        <p><strong>Costo Total Mantenimiento: </strong>@inventario.CostoTotalMantenimiento</p>
                    </div>

                    <div class="col-sm-6">
                        <p><strong>Costo Pedido: </strong>@inventario.CostoPedido</p>
                    </div>

                    <div class="col-sm-6">
                        <p><strong>Estado de Producto: </strong> @inventario.EstadoProducto.Nombre</p>
                    </div>
                </div>
            </div>

        }
    }
    else
    {
        
        <h3 class="text-center m-sm-4">No hay resultados de busqueda</h3>
    }
</div>
