@model MantenimientoWeb.Proyecto.ViewModels.EmpresaViewModel


<h1 class="text-center">Detalle de la empresa</h1>
<div class="container" style="border: groove; border-width: thin; border-color: darkgrey; border-radius: 20px; margin-top: 4%;">
    
    <div>
        <dl class="row">
            <div class="col-lg-6">
                <dt class="col-lg-6 m-2">
                    @Html.DisplayNameFor(model => model.RazonSocial)
                </dt>
                <dd class="col-lg-12 text-center bg-light">
                    @Html.DisplayFor(model => model.RazonSocial)
                </dd>
            </div>
            
            <div class="col-lg-6">
                <dt class="col-lg-6 m-2">
                    @Html.DisplayNameFor(model => model.CIF)
                </dt>
                <dd class="col-lg-12 text-center bg-light">
                    @Html.DisplayFor(model => model.CIF)
                </dd>
            </div>
            
            <div class="col-lg-6">
                <dt class="col-lg-6 m-2">
                    @Html.DisplayNameFor(model => model.Direccion)
                </dt>
                <dd class="col-lg-12 text-center bg-light">
                    @Html.DisplayFor(model => model.Direccion)
                </dd>
            </div>
            
            <div class="col-lg-6">
                <dt class="col-lg-6 m-2">
                    País Residencia <!-- Yo no he utilizado un html helper porque el pais nombre está guardado en un ViewData, pero en teoría se puede hacer.-->
                </dt>
                <dd class="col-lg-12 text-center bg-light">
                    @ViewData["PaisNombre"]
                </dd>
            
            </div>

            <div class="col-lg-6">
                <dt class="col-lg-6 m-2">
                    @Html.DisplayNameFor(model => model.CorreoElectronico)
                </dt>
                <dd class="col-lg-12 text-center bg-light">
                    @Html.DisplayFor(model => model.CorreoElectronico)
                </dd>
            </div>

            <div class="col-lg-6">
                <dt class="col-lg-6 m-2">
                    Tipo de Empresa <!-- Yo no he utilizado un html helper porque el pais nombre está guardado en un ViewData, pero en teoría se puede hacer.-->
                </dt>
                <dd class="col-lg-12 text-center bg-light">
                    @ViewData["TipoEmpresaNombre"]
                </dd>

            </div>
        </dl>

        <a asp-action="Index" class="btn btn-primary mb-3">Volver al inicio</a>
    </div>
</div>