


@{
    ViewData["Title"] = "Busqueda General";
}
<div class="container" style="margin-top: 8%;">
    
    <h1>Busqueda General</h1>
    
    <div class="container card-header" style="margin-top: 8%">
            <center>
                <div class="col-sm-4" style="margin-top: 4%">
                    <a asp-action="Buscar" asp-controller="RegistroEmpresa" class="btn" style="background-color: cornflowerblue; color: white;"><h2>Empresas</h2></a>
                    <h2 class="text-center" style="font-size: 100px"><i class="bi bi-building-fill-gear"></i></h2>
                </div>

                <div class="col-sm-4" style="margin-top: 4%">
                    <a asp-action="Buscar" asp-controller="Productos" class="btn" style="background-color: cornflowerblue; color: white;"><h2>Productos</h2></a>
                    <h2 class="text-center" style="font-size: 100px"><i class="bi bi-basket"></i></h2>
                </div>

                <div class="col-sm-4" style="margin-top: 4%">
                    <a asp-action="Buscar" asp-controller="Inventarios" class="btn" style="background-color: cornflowerblue; color: white;"><h2>Inventarios</h2></a>
                    <h2 class="text-center" style="font-size: 100px"><i class="bi bi-truck"></i></h2>
                </div>
            </center>
            

    </div>
</div>