@{
    ViewData["Title"] = "Área de Producción";
}

<div class="container" style="margin-top: 8%;">
    <fieldset class="card-header">
        <h1>Bienvenidos al Área de Producción</h1>
        <h5>Aquí puedes consultar los productos registrados en la base de datos incluso usar funciones de crear, editar, y eliminarlos. </h5>
    </fieldset>
    

    <div class="container" style="margin-top: 4%;">


        <div class="col-lg-6">
            <center>
                <a style="margin-top: 10%; background-color: cornflowerblue; color: white;" asp-action="Index" asp-controller="Productos" class="btn"><h3> Ver Productos</h3></a>
                <h1 style="font-size: 100px; text-align: center"><i class="bi bi-list-stars"></i></h1>

            </center>
        </div>

        <div class="col-lg-6">
            <center>
                <a style="margin-top: 10%; background-color: cornflowerblue; color: white;" asp-action="Crear" asp-controller="Productos" class="btn"><h3>Crear Producto</h3></a>
                <h1 style="font-size: 100px;text-align: center"><i class="bi bi-pencil-square"></i></h1>

            </center>
        </div>

    </div>
</div>

